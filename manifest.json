{
  "manifest_version": 3,
  "name": "スマートフォームフィラー",
  "version": "1.0.0",
  "description": "ChatGPTを使用したスマートフォーム自動入力拡張機能",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [{
    "resources": ["utils/*.js"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["utils/*", "*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
